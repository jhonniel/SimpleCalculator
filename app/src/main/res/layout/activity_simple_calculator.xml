    <Button
        android:id="@+id/btnClose"
        android:layout_width="129dp"
        android:layout_height="61dp"
        android:text="CLOSE"
        app:backgroundTint="#2196F3"
        tools:layout_editor_absoluteX="222dp"
        tools:layout_editor_absoluteY="466dp" />

    <!--
    <TextView
        android:id="@+id/textView"
