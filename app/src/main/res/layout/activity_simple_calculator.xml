<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/txtResult"
        android:layout_width="261dp"
        android:layout_height="52dp"
        android:layout_marginTop="579dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="75dp" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="122dp"
        android:layout_height="63dp"
        android:layout_marginStart="227dp"
        android:layout_marginLeft="227dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:layout_marginBottom="279dp"
        android:text="DIVIDE"
        app:backgroundTint="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtFirst"
        android:layout_width="261dp"
        android:layout_height="52dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Input Third Number"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="215dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="184dp">

    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/txtThird"
        android:layout_width="261dp"
        android:layout_height="52dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Input First Number"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="102dp" />

    <Button
        android:id="@+id/btnRem"
        android:layout_width="129dp"
        android:layout_height="61dp"
        android:text="REMAINDER"
        app:backgroundTint="#2196F3"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="465dp" />

    <EditText
        android:id="@+id/txtSecond"
        android:layout_width="261dp"
        android:layout_height="52dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Input Second Number"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="154dp" />

    <Button
        android:id="@+id/btnMult"
        android:layout_width="126dp"
        android:layout_height="64dp"
        android:text="MULTIPLY"
        app:backgroundTint="#2196F3"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="387dp" />

    <Button
        android:id="@+id/btnSub"
        android:layout_width="121dp"
        android:layout_height="62dp"
        android:text="SUBTRACT"
        app:backgroundTint="#2196F3"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="314dp" />
